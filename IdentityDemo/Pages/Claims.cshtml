@page
@model IdentityDemo.Pages.ClaimsModel
@{
    <h1>User claims</h1>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <span>Signed in as: @User.Identity?.Name </span>
        <a href="/MicrosoftIdentity/Account/SignOut">Logout</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in User.Claims)
                {
                    <tr>
                        <td>@claim.Type</td>
                        <td>@claim.Value</td>
                    </tr>
                }
            </tbody>
        </table>
    }

}
